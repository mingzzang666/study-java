//			아래와 같은 배열이 있을 때, 배열에서 가장 큰 값 출력하기
			int[] scores = {88, 92, 79, 95, 80};
			int result = 0;
			
			for (int i = 0; i < scores.length; i++) {
					if(scores[i] > result) {
						result = scores[i];
					}
			}
			
			System.out.println("최댓값: " + result);
			
